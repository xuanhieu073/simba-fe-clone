mixin affluent-header
  nav.affluent-header(x-data="affluentheader")
    .affluent-header_reserve(x-ref="reserve")
    .affluent-header_container(x-ref="container")
      .affluent-header_layout(x-ref="layout")
        .affluent-header_branding
        .affluent-header_start
          button.affluent-header_menu-ctrl(@click="toggleShowMenu()" x-ref="menuIcon")
            .hide(x-show="menuShow")
              img(src=path+"assets/icons/affluent/affluent-menu-open.svg", alt="affluent-menu-open")
            .show(x-show="!menuShow")
              img(src=path+"assets/icons/affluent/affluent-menu-close.svg", alt="affluent-menu-close")
          img.affluent-header_logo(src=path+"assets/images/affluent/affluent-logo.png", alt="")
        .affluent-header_center(x-ref="menu" @mouseleave="unhovershowsubmenu()")
          ul.affluent-header_menu
            li(data-target="submenu1" x-bind="showsubmenu")
              a.affluent-header_menu-link
                p Our Products
                img(src=path+"assets/icons/affluent/affluent-chevron-right.svg", alt="", srcset="")
            li(data-target="submenu2" x-bind="showsubmenu")
              a.affluent-header_menu-link(href="#")
                p Promotion 
                img(src=path+"assets/icons/affluent/affluent-chevron-right.svg", alt="", srcset="")
            li(data-target="submenu3" x-bind="showsubmenu")
              a.affluent-header_menu-link(href="#")
                p Our Team 
                img(src=path+"assets/icons/affluent/affluent-chevron-right.svg", alt="", srcset="")
            li(data-target="submenu4" x-bind="showsubmenu")
              a.affluent-header_menu-link(href="#")
                p Contact Us
                img(src=path+"assets/icons/affluent/affluent-chevron-right.svg", alt="", srcset="")
          //- template(x-if="submenuid !== ''")
          .affluent-header_submenu.hidden(x-ref="submenu" x-show="submenuid !== ''" 
            x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0 translate-x-full"
            x-transition:enter-end="opacity-100 translate-x-0"
            x-transition:leave="transition ease-in duration-300"
            x-transition:leave-start="opacity-100 translate-x-0"
            x-transition:leave-end="opacity-100 translate-x-full"
          )
            .affluent-header_submenu-container
              .p-4.text-black 
                button.affluent-header_submenu-close(@click="submenuid = ''") back
                div(data-submenuid="submenu1" x-bind="submenu") submenu item 1
                div(data-submenuid="submenu2" x-bind="submenu") submenu item 2
                div(data-submenuid="submenu3" x-bind="submenu") submenu item 3
                div(data-submenuid="submenu4" x-bind="submenu") submenu item 4
        .affluent-header_end
          a(href="#").affluent-button_primary Connect with Us
