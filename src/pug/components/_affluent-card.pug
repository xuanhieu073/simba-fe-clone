mixin affluent-card-icon(iconpath, desc)
  a(href="#").affluent-card_icon
    img.affluent-card_icon-img(src=path+iconpath, alt="affluent-standfirst")
    p.affluent-card_icon-desc=desc

mixin affluent-card_icon-list
  .affluent-card_icon-list.margin-option(style="--mobile-mb: 80px; --desktop-mb: 158px")
    +affluent-card-icon("assets/icons/affluent/affluent-heart.svg", "Protect your loved ones and enjoy peace of mind")
    +affluent-card-icon("assets/icons/affluent/affluent-chart.svg", "Grow and accumulate your wealth strategically")
    +affluent-card-icon("assets/icons/affluent/affluent-shield.svg", "Tailor solutions for a secure financial future")
    +affluent-card-icon("assets/icons/affluent/affluent-satchel.svg", "Plan an impactful and meaningful legacy that lasts")

mixin affluent-card-large
  .affluent-card_large.affluent-card_bg.margin-option.reverse(style="--mobile-mb: 80px; --desktop-mb: 252px")
    .affluent-card_with-image
      .affluent-card_eyebrow <b>TAILORED</b> FOR YOU
      .affluent-card_content 
        .affluent-card_header
